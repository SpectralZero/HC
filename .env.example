# CareBox Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Secret key for session encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_HEX_STRING

# Application environment: development | production
FLASK_ENV=development

# Debug mode: true | false (NEVER true in production)
FLASK_DEBUG=false

# Base URL of your deployed application (no trailing slash)
BASE_URL=http://127.0.0.1:5000

# =============================================================================
# GOOGLE SHEETS DATABASE
# =============================================================================

# Name of the Google Sheet document
SHEETS_DOC_NAME=CareBoxDB

# Path to service account JSON file (for local development)
GOOGLE_CREDENTIALS_FILE=service_account.json

# OR base64-encoded credentials (for cloud deployment like Render)
# Generate with: python -c "import base64; print(base64.b64encode(open('service_account.json','rb').read()).decode())"
# GOOGLE_CREDENTIALS_BASE64=

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# WhatsApp Business number (international format, no + or spaces)
BUSINESS_WHATSAPP=9627XXXXXXXX

# Business name for display
BUSINESS_NAME=CareBox

# =============================================================================
# SECURITY FEATURES
# =============================================================================

# Enable serial number verification before showing guide: true | false
ENABLE_SERIAL_CHECK=true

# Salt for IP hashing (generate with: python -c "import secrets; print(secrets.token_hex(16))")
IP_HASH_SALT=CHANGE_ME_TO_A_RANDOM_32_CHAR_HEX_STRING

# Admin panel password (strong, unique password)
ADMIN_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD

# Rate limit: max serial attempts before lockout
MAX_SERIAL_ATTEMPTS=5

# Lockout duration in minutes
LOCKOUT_DURATION_MINUTES=15

# =============================================================================
# OPTIONAL: HTTPS / PRODUCTION
# =============================================================================

# Force HTTPS redirect: true | false
FORCE_HTTPS=false

# Trusted proxy headers (comma-separated): X-Forwarded-For,X-Real-IP
TRUSTED_PROXIES=X-Forwarded-For
